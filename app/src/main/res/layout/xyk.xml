<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/b">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="账户提现"
        android:textColor="#FA8072"
        android:textSize="40sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF8000"
            android:textSize="20sp"
            android:text="提现金额" />

        <EditText
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF8000"
            android:textSize="20sp"
            android:text="银行卡号" />

        <EditText
            android:id="@+id/bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF8000"
            android:textSize="20sp"
            android:text="支付密码" />

        <EditText
            android:id="@+id/pay_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:inputType="numberPassword"/>



        <TextView
            android:id="@+id/textViewsy1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在提现!"
            android:visibility="invisible"
            />
        <Button
            android:id="@+id/btn"
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:onClick="btOk"
            android:paddingTop="20dp"
            android:textColor="#292421"
            android:textSize="20dp"
            android:background="#00000000"
            android:text="提现" />

        <Button
            android:id="@+id/fanhui"
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:textColor="#292421"
            android:textSize="20dp"
            android:background="#00000000"
            android:text="返回" />

        <ProgressBar
            android:id="@+id/progressBarsy1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tvsy1"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:textSize="20sp"
            android:visibility="invisible" />
        <Button
            android:id="@+id/btnsy1"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:paddingTop="20dp"
            android:text="获取提现注意事项"
            android:textColor="#292421"
            android:textSize="20sp" />

        <TableRow
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp">
            <Button
                android:id="@+id/btnPlaysy1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="24dp"
                android:text="播放"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btnPausesy1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:text="暂停"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btnStopsy1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:text="停止"
                android:textStyle="bold"
                />


        </TableRow>



    </TableLayout>
</LinearLayout>